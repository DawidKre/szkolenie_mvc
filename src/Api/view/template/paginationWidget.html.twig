<nav aria-label="Page navigation">
    <ul class="pagination ">
        {% if page != 1 %}
            <li class="previous">
                <a href="{{ url(route, {'page' : 1}) }}"><span aria-hidden="true">&larr;</span>Pierwsza</a>
            </li>
            <li>
                <a href="{{ url(route, {'page' : page-1}) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% else %}
            <li class="previous disabled">
                <a href="{{ url(route, {'page' : 1}) }}"><span aria-hidden="true">&larr;</span>Pierwsza</a>
            </li>
            <li class="previous disabled">
                <a href="" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% endif %}

        {% set i = 1 %}
        {% for i in i..total %}
            {% if ((i >= (page -3)) and (i <= (page+3))) %}
                <li {% if page == i %}class="active"{% endif %}>
                    <a href="{{ url(route, {'page' : i}) }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if page != total %}
            <li>
                <a href="{{ url(route, {'page' : page+1}) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <li class="next">
                <a href="{{ url(route, {'page' : total}) }}">Ostatnia <span aria-hidden="true">&rarr;</span></a>
            </li>
        {% endif %}
    </ul>
</nav>