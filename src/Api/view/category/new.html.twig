{% extends 'Api/view/layout.html.twig' %}

{% block body %}
{#{{ dump(req) }}#}
    {% if category.id %}
<h1>Edytuj kategorie</h1>
<form role="form" action="{{ url('edit_category', {'id' : category.id}) }}" method="post">
    {% else %}
    <h1>Nowa kategoria</h1>
    <form role="form" action="{{ url('new_category') }}" method="post">
        {% endif %}
        <div class="form-group">
            <label for="name">Tytuł</label>
            <input type="text" class="form-control" id="name" name="name" value="
                {% if(category.name) %}
                    {{ category.name }}
                {% endif %}">
        </div>
        <button type="submit" class="btn btn-default" name="submit">Submit</button>
    </form>
    <ul>
        <li>
            <a href="{{ url('categories') }}">Powrót do listy</a>
        </li>
    </ul>
    {% endblock %}
